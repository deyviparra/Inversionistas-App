<div>
    <h1> Perfil de usuario</h1>
    <section id="info-ppal" class="info-ppal">
        <img id="img" src="/uploads/sinfoto.png" alt="Foto ursuario">
        <ul>
            <li>
                <p> Nombre: {{user.nombre}} {{user.apellido}}</p>
            </li>
            <li>
                <p> Celular: {{user.celular}}</p>
            </li>
            <li>
                <p> Correo: {{user.correo}}</p>
            </li>
        </ul>
        <div class="botones">
            <form action="/edit-user/{{user._id}}?_method=GET" method="GET">
                <input type="hidden" name="_method" value="GET">
                <button class="up" type="submit">Modificar</button>
            </form>
        </div>
    </section>