<div class="form" id="form-nuevo-inver">
    <div class="columna">
        <form action="/inversion/fnf" method="POST" id="inver-form" class="form-forms">
            <h1 id="titulo1-h1">Modelo FNF</h1>
            <div class="contenedor-form">
                <div class="columna-1">
                    <div class="form-div">
                        <p> Proyecto:</p>
                        <input type="hidden" name="inver_id" value="{{inversionista._id}}">
                        <select name="proyecto" class="lista-sel">
                            {{#each proyecto}}
                            <option value="{{_id}}">{{nombre}}</option>
                            {{/each}}
                        </select>
                    </div>
                    <div class="form-div">
                        <p> Fecha de inicio:</p>
                        <input type="date" name="fecha_inicio" placeholder="Fecha de inicio" class="input-form">
                    </div>
                    <div class="form-div">
                        <p>Fecha de legalización mutuo en fiducia: </p>
                        <input type="date" name="lega_mutuo_fidu" placeholder="Fecha de legalización mutuo en fiducia"
                            class="input-form">
                    </div>
                    <div class="form-div">
                        <p> Valor del mutuo: </p>
                        <input type="text" name="valor_mutuo" placeholder="Ingrese el valor SIN el simbolo $ " class="input-form">
                        <input type="text" name="observaciones" placeholder="Observaciones" class="input-form">
                    </div>
                    <div class="form-div">
                        <p>Tasa de interés mensual: </p>
                        <input type="text" name="tasa_interes" placeholder="Ingrese la tasa de interés SIN el simbolo %" class="input-form">
                    </div>
                    {{!-- <div class="form-div">
                        <p>Tasa de interés anual: </p>
                        <input type="text" name="tasa_anual" placeholder="Ingrese la tasa de interés SIN el simbolo %" class="input-form">
                    </div> --}}

                    <div class="form-div">
                        <p>Porcentaje cliente: </p>
                        <input type="radio" name="porcentaje_cliente" class="radio" value="0"> 0 %
                        <input type="radio" name="porcentaje_cliente" class="radio" value="50"> 50 %
                    </div>
                    <div class="form-div">
                        <p>Porcentaje garantía: </p>
                        <input type="radio" name="porcentaje_garantia" class="radio" value="50"> 50 %
                        <input type="radio" name="porcentaje_garantia" class="radio" value="100"> 100 %
                    </div>
                    <div class="form-div">
                        <p>Escoger fecha de pago: </p>
                        <input type="radio" name="fecha_pago" class="radio" value="15"> Día 15 del mes
                        <input type="radio" name="fecha_pago" class="radio" value="30"> Día 30 del mes
                    </div>
                </div>
            </div>
            <button class="boton" type="submit">
                Guardar inversión
            </button>
        </form>
    </div>
</div>