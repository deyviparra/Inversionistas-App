<h1>Datos inversionista</h1>
<section id="info-ppal" class="info-ppal">
    <img id="img" src="{{inversionista.imagePath}}" alt="Foto Inversionista">
    <ul>
        <li>
            <p> Nombre: {{inversionista.nombre}} {{inversionista.apellido}}</p>
        </li>
        <li>
            <p> Teléfono: {{inversionista.telefono}}</p>
        </li>
        <li>
            <p> Correo: {{inversionista.correo}}</p>
        </li>
        <li>
            <p> Cédula: {{inversionista.cedula}}</p>
        </li>
    </ul>
</section>

<section class="info-inversion">

    {{#if icompra}}
    <h2>Inversión compra de inmueble</h2>
    <section class="info-ppal">
        <ul>
            <li>
                <p> Proyecto: {{icompra.proyecto.nombre}}</p>
            </li>
            <li>
                <p> Fecha de inicio: {{icompra.fecha_inicio}}</p>
            </li>
            <li>
                <p> Fecha de cierre: {{icompra.fecha_cierre}}</p>
            </li>
            <li>
                <p> Valor de compra: {{icompra.valor_compra}}</p>
            </li>
            <li>
                <p>Fecha de entrega: {{icompra.fecha_entrega}}</p>
            </li>
            <li>
                <p>TIR prometida: {{icompra.tir_prometida}}</p>
            </li>
        </ul>
        <table>
            <p>Inmuebles:</p>
            {{#each icompra.inmuebles}}
            <tr>
                <td> {{torre}}</td>
                <td> {{valor}}</td>
            </tr>
            {{/each}}
        </table>
        <table>
            <p>Co-inversionista:</p>
            {{#each icompra.co_inversionista}}
            <tr>
                <td> {{nombre}}</td>
            </tr>
            {{/each}}
        </table>
        <div class="botones">
            <a href="/edit-inversion/{{icompra._id}}/compra" class="boton" type="submit">
                Modificar inversión
            </a>
            <a href="/asociar-inmueble/{{icompra._id}}/compra" class="boton" type="submit">
                Asociar inmueble
            </a>
            <a href="/asociar-inversionista/{{icompra._id}}/compra" class="boton" type="submit">
                Asociar Co-inversionista
            </a>
            <form action="/eliminar-inversion/{{icompra._id}}/compra?_method=DELETE" method="POST">
                <input type="hidden" name="_method" value="DELETE">
                <button class="btn btn-danger delete" type="submit">Eliminar Inversión</button>
            </form>

        </div>
    </section>
    {{/if}}



