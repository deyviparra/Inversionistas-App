<h1>Datos inversionista</h1>
<section id="info-ppal" class="info-ppal">
    <img id="img" src="{{inversionista.imagePath}}" alt="Foto Inversionista">
    <ul>
        {{#if inversionista.razon_social}}
        <li>
            <p> <span class="highlight">Razón social: </span>{{inversionista.razon_social}}</p>
        </li>
        <li>
            <p> <span class="highlight">Nit: </span>{{addPointsNit inversionista.nit}}</p>
        </li>
        <li>
            <p> <span class="highlight">Representante legal: </span>{{inversionista.nombre}} {{inversionista.apellido}}
            </p>
        </li>
        <li>
            <p> <span class="highlight">Cédula: </span>{{addPoints inversionista.cedula}}</p>
        </li>
        <li>
            <p> <span class="highlight">Celular: </span>{{phoneNumber inversionista.celular}}</p>
        </li>
        <li>
            <p> <span class="highlight">Correo: </span>{{inversionista.correo}}</p>
        </li>
        {{else}}
        <li>
            <p> <span class="highlight">Nombre: </span> {{inversionista.nombre}} {{inversionista.apellido}}</p>
        </li>
        <li>
            <p> <span class="highlight">Cédula: </span>{{addPoints inversionista.cedula}}</p>
        </li>
        <li>
            <p> <span class="highlight">Celular: </span>{{phoneNumber inversionista.celular}}</p>
        </li>
        <li>
            <p> <span class="highlight">Correo: </span> {{inversionista.correo}}</p>
        </li>
        {{/if}}
    </ul>
</section>

<section class="info-inversion">
    {{#if icompra}}
    <h2>Inversión Compra de inmueble</h2>
    <section class="info-ppal">
        <div class="info-inversion-div">
            <ul>
                <li>
                    <p> <span class="highlight">Proyecto: </span> <a href="/ficha-p/{{icompra.proyecto.id}}" type="submit"> {{icompra.proyecto.nombre}}</a></p>
                </li>
                <li>
                    <p><span class="highlight">Fecha de inicio: </span>{{icompra.fecha_inicio}}</p>
                </li>
                <li>
                    <p> <span class="highlight">Fecha de cierre: </span>{{icompra.fecha_cierre}}</p>
                </li>
            </ul>
            <ul>
                <li>
                    <p> <span class="highlight">Valor de compra:
                        </span>{{formatNumber icompra.valor_compra style="currency" currency="COP"}}</p>
                </li>
                <li>
                    <p> <span class="highlight">Fecha de entrega: </span>{{icompra.fecha_entrega}}</p>
                </li>
                <li>
                    <p> <span class="highlight">TIR prometida: </span>{{icompra.tir_prometida}} %</p>
                </li>
            </ul>
        </div>
        <div class="inmueble-coinver">
            <div class="lista-inmuebles">
                <button class="btn-inversion">Ver inmuebles</button>
                <div id="modal-div" class="modal-div">
                    <ul class="modal">
                        {{#each icompra.inmuebles}}
                        <li>
                            <p> Torre: {{torre}}</p>
                            <p> Apartamento: {{apartamento}}</p>
