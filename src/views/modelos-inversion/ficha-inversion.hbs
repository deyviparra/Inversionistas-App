                            <p> Valor: {{formatNumber valor style="currency" currency="COP"}}</p>
                        </li>
                        {{/each}}
                    </ul>
                </div>
            </div>
            <div class="lista-co-inver">
                <button class="btn-inversion">Ver co-inversionistas</button>
                <div id="modal-div" class="modal-div">
                    <ul class="modal">
                        {{#each icompra.co_inversionista}}
                        <li>
                            <p>{{nombre}}</p>
