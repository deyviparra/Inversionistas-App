{{#if ifnf}}
<section class="pp-fnf">
    <h2>Plan de pagos</h2>
    <ul>
        <li>
            <h4> <strong> Fecha de pago</strong> </h4>
            <h4> <strong> Cuota cliente </strong> </h4>
            <h4 class="checklist"> <strong> Pago</strong> </h4>
            <h4> <strong> Saldo </strong> </h4>
            <h4> <strong> Cuota garantía </strong> </h4>
            <h4 class="checklist"> <strong> Pago</strong> </h4>
            <h4> <strong> Saldo </strong> </h4>
        </li>
        {{#each ifnf.plan_pago_intereses}}
        <hr color="#434343" size=2>
        <li>
            <p> {{fecha}}</p>
            <p> {{formatNumber couta_cliente style="currency" currency="COP"}}</p>
            {{#if arrCheckCliente}}
            <input type="checkbox" disabled="disabled" class="checklist checkbox" checked>
            {{else}}
            <input type="checkbox" disabled="disabled" class="checklist checkbox">
            {{/if}}
            <p>{{formatNumber saldoCliente style="currency" currency="COP"}}</p>
            
            <p> {{formatNumber couta_garantia style="currency" currency="COP"}}</p>
            {{#if arrCheckGarantia}}
            <input type="checkbox" disabled="disabled" class="checklist checkbox" checked>
            {{else}}
            <input type="checkbox" disabled="disabled" class="checklist checkbox">
            {{/if}}
            <p>{{formatNumber saldoGarantia style="currency" currency="COP"}}</p>
        </li>
        {{/each}}
    </ul>
    <div class="botones">
        <div>
            <form action="/pago/add/{{ifnf._id}}/fnf" method="GET" class="form-forms">
                <button class="boton" type="submit">
                    Agregar pago a inversionista
                </button>
            </form>
            <form action="/pago/add/{{ifnf._id}}/fnf" method="GET" class="form-forms">
                <input type="hidden" name="garantia" value="true">
                <button class="boton" type="submit">
                    Agregar pago a garantía
                </button>
            </form>
        </div>
    </div>
</section>
{{/if}}