<div class="form" id="form-nuevo-inver">
    <div class="columna">
        <form action="/inversion/asociativo" method="POST" id="inver-form" class="form-forms">
            <h1 id="titulo1-h1">Modelo asociativo</h1>
            <div class="contenedor-form">
                <div class="columna-1">
                    <div class="form-div">
                        <p> Proyecto:</p>
                        <input type="hidden" name="inver_id" value="{{inversionista._id}}">
                        <select name="proyecto_id" class="lista-sel">
                            {{#each proyecto}}
                            <option value="{{_id}}">{{nombre}}</option>
                            {{/each}}
                        </select> 
                    </div>
                    <div class="form-div">
                        <p> Fecha de inicio:</p>
                        <input type="date" name="fecha_inicio" placeholder="Fecha de inicio " class="input-form">
                    </div>
                    <div class="form-div">
                        <p> Fecha de cierre: </p>
                        <input type="date" name="fecha_cierre" placeholder="Fecha de cierre " class="input-form">
                    </div>
                    <div class="form-div">
                        <p> Numero de acciones: </p>
                        <input type="text" name="n_acciones" placeholder="Número de acciones "
                            class="input-form">
                    </div>            
                    <div class="form-div">
                        <p> Valor de compra: </p>
                        <input type="number" name="valor_compra" placeholder="Valor de compra " class="input-form">
                    </div>
                    <div class="form-div">
                        <p>Fecha de entrega: </p>
                        <input type="date" name="fecha_entrega_prometida" placeholder="Fecha de entrega " class="input-form">
                    </div>
                    <div class="form-div">
                        <p>TIR prometida: </p>
                        <input type="number" step="any"  name="tir_prometida" placeholder="TIR prometida " class="input-form">
                    </div>
                    <div class="form-div">
                        <p>Escoger fecha de pago: </p>
                        <input type="radio" name="fecha_pago" class="radio" value="7"> Día 7 del mes
                        <input type="radio" name="fecha_pago" class="radio" value="20"> Día 20 del mes
                    </div>
                </div>
            </div>
            <button class="boton" type="submit">
                Guardar inversión
            </button>
        </form>
    </div>
</div>