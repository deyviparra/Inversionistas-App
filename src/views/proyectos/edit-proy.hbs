<div class="form" id="form-edit-proy">
    <div class="columna">
        <form action="/proy/edit/{{proy.id}}?_method=PUT" method="POST" enctype="multipart/form-data" id="proy-form"
            class="form-forms">
            <input type="hidden" name="_method" value="PUT">
            <h1 id="titulo3-h1">Actualizar proyecto</h1>
            <div class="contenedor-form">
                <div class="columna-1">
                    <div class="form-div">
                        <p>Nombre: </p>
                        <input type="text" name="nombre" value="{{proy.nombre}}" id="nombre_p" placeholder="Nombre: "
                            class="input-form" autofocus>
                    </div>
                    <div class="form-div">
                        <p> Tipo de inmueble:</p>
                        <select name="tipo" class="lista-sel" id="tipo">
                            <option value="apartamento"> Apartamento</option>
                            <option value="casa"> Casa</option>
                            <option value="suite"> Suite</option>
                            <option value="local"> Local</option>
                            <option value="lote"> Lote</option>
                        </select>
                    </div>
                    <div class="form-div">
                        <p>Dirección: </p>
                        <input type="text" name="direccion" value="{{proy.direccion}}" id="direccion_p"
                            placeholder="Dirección: " class="input-form">
                    </div>
                    <div class="form-div">
                        <p>Rango de precios: </p>
                        <input type="text" name="rango" value="{{proy.rango}}" id="rango_p"
                            placeholder="Rango de precios: " class="input-form">
                    </div>
                </div>
                <div class="columna-1">
                    <div class="form-div">
                        <p>Municipio: </p>
                        <input type="text" name="municipio" value="{{proy.municipio}}" id="municipio_p"
                            placeholder="Municipio: " class="input-form">
                    </div>
                    <div class="form-div">
                        <p>Departamento: </p>
                        <input type="text" name="departamento" value="{{proy.departamento}}" id="departamento_p"
                            placeholder="Departamento: " class="input-form">
                    </div>
                    <div class="form-div">
                        <p>Estrato: </p>
                        <input type="text" name="estrato" value="{{proy.estrato}}" id="estrato_p"
                            placeholder="Estrato: " class="input-inver">
                    </div>
                    <div class="input-group mb-3">
                        <input type="file" class="custom-file-input" name="image" id="image_p">
                        <label for="image" class="custom-file-label">Subir imágen</label>
                        <output id="list-img-p"></output>
                    </div>
                </div>
            </div>
            <button class="boton" type="submit">
                Guardar proyecto
            </button>
        </form>
    </div>
</div>