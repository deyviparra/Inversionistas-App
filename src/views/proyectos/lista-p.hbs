<h1 id="titulo1-h1">Proyectos</h1>
<div class="list" id="list-proyectos">
  {{#each proyectos}}
  <div class='cuadro'>
    <div class='cuadro-interno'>
      <div class='div-imagen'>
        <img src='{{imagePath}}' alt='Foto del proyecto' class='img-fluid'>
      </div>
      <div class='texto-cuadro'>
        <div class='card-block px-2'>
          <p class='up2 titulo'>{{nombre}}</p>
          <p class='up2 card-text'>Direcci√≥n: {{direccion}}</p>
          <p class='up2 card-text'>Tipo: {{tipo}}</p>
          <p class='up2 card-text'>Rango: {{rango}}</p>
        </div>
        <div class="cont-botones">
          <form action="/ficha-p/{{_id}}?_method=GET" method="GET">
            <input type="hidden" name="_method" value="GET">
            <button class="btn btn-success ver-ficha" type="submit">Ver ficha</button>
          </form>
          {{#if user.modificar}}
          <form action="/proy/delete/{{_id}}?_method=DELETE" method="POST">
            <input type="hidden" name="_method" value="DELETE">
            <button class="btn btn-danger delete" type="submit">Eliminar</button>
          </form>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
  {{/each}}

</div>