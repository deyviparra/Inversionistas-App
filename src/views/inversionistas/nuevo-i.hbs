<div class="form-nuevo-inver" id="form-nuevo-inver">
        <div class="columna">
            <form action="/inver/add" method="POST" id="inver-form" class="inver-form" enctype="multipart/form-data">
                <h1 id="titulo1-h1">Nuevo inversionista</h1>
                <div class="contenedor-form">
                    <div class="columna-1">
                        <div class="form-div">
                            <input type="text" name="nombre" placeholder="Nombre: " class="input-inver" autofocus
                                required>
                        </div>
                        <div class="form-div">
                            <input type="text" name="apellido" placeholder="Apellido: " class="input-inver" required>
                        </div>
                        <div class="form-div">
                            <input type="text" name="telefono" placeholder="Celular: " class="input-inver" required>
                        </div>
                        <div class="form-div">
                            <input type="email" name="correo" placeholder="Correo: " class="input-inver" required>
                        </div>
                        <div class="form-div">
                            <input type="text" name="cedula" placeholder="Cedula: " class="input-inver" required>
                        </div>
                        <div class="form-div">
                            <input type="text" name="direccion" placeholder="Dirección: " class="input-inver">
                        </div>
                    </div>
                    <div class="columna-1">
                        <div class="form-div">
                            <input type="date" name="nacimiento" placeholder="Fecha de nacimiento: " class="input-inver">
                        </div>
                        <div class="form-div">
                            <input type="text" name="estado_civil" placeholder="Estado Civil: " class="input-inver">
                        </div>
                        <div class="form-div">
                            <input type="text" name="n_hijos" placeholder="Número de hijos: " class="input-inver">
                        </div>
                        <div class="form-div">
                            <input type="text" name="n_mascotas" placeholder="Número de mascotas: " class="input-inver">
                        </div>
                        <div class="form-div">
                            <input type="text" name="hobby" placeholder="Hobby: " class="input-inver">
                        </div>
                        <div class="input-group mb-3">
                            <input type="file" name='image' class="custom-file-input" id="image" >
                            <label for="image" class="custom-file-label">Subir imágen</label>
                            <output id="list-img"></output>
                        </div>
                    </div>
                </div>
                <button class="boton" type="submit">
                    Guardar inversionita
                </button>
            </form>
        </div>
    </div>